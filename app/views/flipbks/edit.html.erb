<!DOCTYPE html>
<html>
<body>

<div id="container" class="container_12">
  
  <div id="profile_banner" class="grid_12 alpha omega">
      <div id="name" class="center">
        <%= current_user.name %>
      </div>
      
      <div class="separator"></div>
      
      <div id="tagline" class="center">
        share what you make
      </div>
      
      <div id="fb_menu">
      
        <!-- <%= button_to "Preview flipbook", :flipbks, :method => :get, :class => "ctr_button" %> -->
        
        <%= button_to "Your flipbooks", user_url(current_user.id), :method => :get, :class => "ctr_button" %>
                    
      </div>
      
      <div id="flipbook">
        <div id="flipbook_all">
          <ul id="flipbook_form" class="grid_12 alpha omega">
            <%= form_for @book do |f| %>
            <%= f.hidden_field :user_id %>
    
            <%= f.submit "Save flipbook", :class => "ctr_button2" %>

            <li class="grid_2 push_2">
              <%= f.text_field :name, :placeholder => "Name" %>
            </li>
  
            <li class="grid_2 push_2">
              <%= f.text_field :description, :placeholder => "Describe" %>
            </li>
  
            <li class="grid_2 push_2">
              <% spd = @book.speed || 200 %>
              <%= f.text_field :speed , :placeholder => "How fast? (ms)" %>
            </li>
  
            <li id="chkbox" class="grid_2 push_2">
              <%= f.label "Make public?" %>
              <%= f.check_box :public %>
            </li>
          </ul>
  
          <div id="insta_photos" class="grid_12 alpha omega">
            <div id="photos">
              <% User.find(session[:user_id]).photos.all.each do |p| %>
                <div id="photos_new">
                  <label for="<%= p.id %>">
                    <%= image_tag(p.url, height: '140', width: '140') %>

                    <%= check_box_tag('photos[]', p.id, (((p.flipbk_id == @book.id)&& p.flipbk_id != nil)? true : false), :id => "#{p.id}" ) %>

                    <% p.order = p.order || 0 %>
                    <%# text_field_tag "order[]", "#{p.id}-#{p.order}" , :size => 10 %>
                  </label>
                </div>
              <% end %>
            </div>
          </div>
  

          <% end %> 

        </div>
      </div>
  </div>
  
  <div class="push"></div>
        
</div>

</body>
</html>