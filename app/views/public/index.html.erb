<!DOCTYPE html>
<html>
<body>

<div class="container_12">

  <div id="nav" class="grid_12">
      <div id="social" class="grid_4 alpha">
          <div id="flip_icon">
          <%= link_to image_tag('assets/flipbook60.jpg'), :root %>
          </div>
         
          <div id="fb-root"></div>
            <ul id="social_media">
              <li><a href="#" class="facebook_icon">Facebook</a></li>
              <li><a href="#" class="twitter_icon">Twitter</a></li>
              <li><a href="#" class="tumblr_icon">Tumblr</a></li>
            </ul>
      </div>
      
      <div id="links" class="grid_4 omega push_4">
        <% if current_user %>
          <%= link_to("Profile", user_url(current_user.id)) %> |
          <%= link_to("Log Out", login_path(current_user.id), :method => :delete) %>
        <% else %>
  
        <%= link_to("Log In", :new_login) %>
  
        <% end %>
      </div>
  </div>
  
  <div id="banner" class="grid_12">
      <div id="name" class="center">
        name
      </div>
      
      <div id="tagline" class="center">
        tagline
      </div>
      
      <div id="signup">
        signup
      </div>
      
      <div id="graphic">
        graphic
      </div>
      
      <div id="movie">
        movie
      </div>
  </div>
  
  <div id="buffer" class="grid_12">
      <div id="buff_text">
        buffer
      </div>
  </div>
  
  <div id="discover" class="grid_12">
      <div id="pub_flipbks">
        public flipbooks
      </div>
  </div>
  
  <div id="foot" class="grid_12">
      <div id="nav_icon" class="grid_4 alpha">
        icon
      </div>
      
      <div id="foot_button" class="grid_4">
        button
      </div>
    
      <div id="rev_links" class="grid_4 omega">
        links
      </div>
  </div>
  
</div>
  
</body>
</html>












